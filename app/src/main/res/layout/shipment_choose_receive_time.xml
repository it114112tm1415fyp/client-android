<?xml version="1.0" encoding="utf-8"?>

<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:background="@drawable/lay_background">

    <TableRow android:id="@+id/tableRowDay">

        <TextView/>

    </TableRow>

    <TableRow
        android:id="@+id/tableRowTime1"
        android:background="#BDBDBD">

    </TableRow>

    <TableRow android:id="@+id/tableRowTime2">

    </TableRow>

    <TableRow
        android:id="@+id/tableRowTime3"
        android:background="#BDBDBD">

    </TableRow>

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:padding="5dp"
        android:textColor="@color/primary_dark_material_light"
        android:text="* Choose your available time for us to collect the good(s)"/>

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:padding="5dp"
        android:textColor="@color/primary_dark_material_light"
        android:text="* Green for Available Time, Grey for not Available Time"/>

    <Button
        android:id="@+id/btnNext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:padding="5dp"
        android:background="@drawable/button"
        android:textColor="#fff"
        android:text="@string/btn_next"/>
</TableLayout>